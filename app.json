{
  "expo": {
    "name": "Cuento Nauta",
    "slug": "cuento-nauta",
    "version": "1.0.0",
    "description": "Descubre, busca y gestiona tus libros favoritos. Encuentra libros gratuitos para leer en l√≠nea y lleva control de tu progreso de lectura.",
    "keywords": ["libros", "lectura", "biblioteca", "ebooks", "books", "reading"],
    "primaryColor": "#f97316",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cuentonauta",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "privacy": "public",
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#f97316"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/Logo.png",
      "name": "Cuento Nauta - Descubre y gestiona tus libros",
      "shortName": "Cuento Nauta",
      "lang": "es-ES",
      "scope": "/",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait",
      "themeColor": "#f97316",
      "backgroundColor": "#ffffff",
      "meta": {
        "apple-mobile-web-app-capable": "yes",
        "apple-mobile-web-app-status-bar-style": "default",
        "viewport": "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#f97316"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
